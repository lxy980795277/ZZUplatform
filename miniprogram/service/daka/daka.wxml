
<view class="container">
  <view class="login-icon">
    <image class="login-img" src="https://www.zzumarket.com/daka.png"></image>
  </view>
  <view class="login-from">
 
    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../../icons/name.png"></image>
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入账号" maxlength="12" bindinput="idInput" />
    </view>
    <view class="line"></view>
 
    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../../icons/pwd.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" placeholder="请输入密码" bindinput="pwdInput" />
    </view>

    <view class="inputView">
      <image class="keyImage1" src="../../icons/邮箱.png"></image>
      <label class="loginLab">邮箱</label>
      <input class="inputText"  placeholder="请输入邮箱" bindinput="emailInput" />
    </view>
 
    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">加入自动打卡</button>
      <view class="tui-protocol" hover-class="opcity" hover-stay-time="150">加入前请仔细阅读用户须知
        <text class="tui-protocol-red" bindtap="protocol">《用户须知》</text>
      </view>
    </view>
  </view>
</view>
