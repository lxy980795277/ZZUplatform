<view class="container">
  <view class="tui-bg-box">
    <image src="bg_login.png" class="tui-bg-img"></image>
    <image src="111.png" class="tui-photo"></image>
    <view class="tui-login-name">学生登录</view>
  </view>
  <form bindsubmit="login">
    <view class="tui-login-from">
      <view class="tui-line-cell">
        <tui-icon name="people" size="20" color='#5677fc'></tui-icon>
        <input placeholder-class="phcolor" class="tui-input" name="mobile" placeholder="请输入学号" bindinput="input_id" maxlength="12" />
      </view>
      <view class="tui-line-cell tui-top28">
        <tui-icon name="pwd" size="20" color='#5677fc'></tui-icon>
        <input placeholder-class="phcolor" class="tui-input" name="smsCode" placeholder="请输入密码" bindinput="input_pwd"maxlength="16" type='password' />
        
      </view>
      <button form-type="submit" class="tui-btn-submit">
         <tui-button tui-button-class="tui-btn-inner" >登录</tui-button>
      </button>
      <view class="tui-protocol" hover-class="opcity" hover-stay-time="150">点击"登录"即表示已同意
        <text class="tui-protocol-red" bindtap="protocol">《用户协议》</text>
      </view>
    </view>
  </form>
</view>