.text-content {
  margin-top:150rpx;
  padding: 0rpx;
}
.text-area{
  margin-top:50rpx;
  position: absolute;
  top:100rpx;
  width:100.2%;
  height:325rpx;
  border:5px solid #74e6fa;
}
textarea {
  width: 100%;
  height: 300rpx;
  padding: 0rpx;
  background-color: #ffffff;
}

.input-content{
  display: flex;
  flex-direction: row;
  width: 83.5%;
  height: 80rpx;
  align-items: center;
  line-height: 36rpx;
  border-radius: 5rpx;
  background-color: #ffffff;
  padding-left: 5rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  position:absolute;
  top:0rpx;
  left:50rpx;
  border:5px solid #74e6fa;
}

.btn-func {
  display: flex;
  flex-direction: column;
  width: 100%;
  position: absolute;
  bottom: 0;
  margin: 0 auto;
  align-items: center;
}

.btn {
  width: 220rpx;
  height: 45rpx;
  line-height: 45rpx;
  background-color: #4ff5df;
  color: #fff;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
}